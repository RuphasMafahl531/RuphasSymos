local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Uma Racing | DELTA SPRINT V21",
   LoadingTitle = "Menghubungkan ke Tombol Sprint...",
   LoadingSubtitle = "V21 - Delta Movement",
   ConfigurationSaving = { Enabled = false }
})

local Tab = Window:CreateTab("Main Hack", 4483362458)

_G.SprintBoost = 0 -- Power tambahan
_G.InfStamina = true

-- 1. INFINITE STAMINA (Sudah Berhasil)
Tab:CreateToggle({
   Name = "Infinite Stamina",
   CurrentValue = true,
   Flag = "StamToggle",
   Callback = function(Value)
       _G.InfStamina = Value
       task.spawn(function()
           while _G.InfStamina do
               local p = game.Players.LocalPlayer
               if p.Character then
                   p.Character:SetAttribute("Stamina", 100)
                   p.Character:SetAttribute("Sprinting", false) -- Menipu sistem drain
               end
               task.wait()
           end
       end)
   end,
})

-- 2. BOOST POWER (Hanya aktif saat sprint)
Tab:CreateSlider({
   Name = "Sprint Extra Power",
   Range = {0, 10},
   Increment = 0.5,
   CurrentValue = 0,
   Flag = "SpeedSlider", 
   Callback = function(Value)
       _G.SprintBoost = Value
   end,
})

-- FUNGSI PENDETEKSI TOMBOL SPRINT MOBILE & PC
local UIS = game:GetService("UserInputService")
local function IsSprinting()
    local p = game.Players.LocalPlayer
    local char = p.Character
    if char then
        -- Mengecek apakah Shift ditekan ATAU tombol sprint UI game aktif
        return UIS:IsKeyDown(Enum.KeyCode.LeftShift) or char:GetAttribute("Sprinting") == true or char:GetAttribute("IsSprinting") == true
    end
    return false
end

-- LOOP DELTA: Menambahkan kecepatan ke posisi karakter
game:GetService("RunService").Heartbeat:Connect(function()
    local p = game.Players.LocalPlayer
    local char = p.Character
    local root = char and char:FindFirstChild("HumanoidRootPart")
    local hum = char and char:FindFirstChild("Humanoid")
    
    if root and hum and _G.SprintBoost > 0 then
        -- HANYA AKTIF JIKA: Karakter bergerak DAN Tombol Sprint Ditekan
        if hum.MoveDirection.Magnitude > 0 and IsSprinting() then
            -- Memberikan dorongan instan pada posisi (CFrame)
            root.CFrame = root.CFrame + (hum.MoveDirection * (_G.SprintBoost / 4))
        end
    end
end)

-- 3. FITUR LENGKAP LAINNYA
Tab:CreateToggle({
   Name = "Anti Hit Wall",
   CurrentValue = false,
   Callback = function(Value)
       _G.AntiHit = Value
       game:GetService("RunService").Stepped:Connect(function()
           if _G.AntiHit and game.Players.LocalPlayer.Character then
               for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                   if v:IsA("BasePart") then v.CanCollide = false end
               end
           end
       end)
   end,
})

Tab:CreateButton({
   Name = "ESP & Instant Camera",
   Callback = function()
       for _, v in pairs(game.Players:GetPlayers()) do
           if v ~= game.Players.LocalPlayer and v.Character then
               local h = Instance.new("Highlight", v.Character)
               h.FillColor = Color3.fromRGB(255, 0, 0)
           end
       end
       workspace.CurrentCamera.FieldOfView = 120
   end,
})

Rayfield:Notify({
   Title = "V21 Delta Active!",
   Content = "Boost hanya aktif saat kamu menekan tombol sprint!",
   Duration = 5,
})
